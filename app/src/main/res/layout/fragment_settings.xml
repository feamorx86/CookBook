<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.feamorx.cookebook.fragments.SettingsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center_horizontal"
            android:text="Настройки" />

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Интервал обновления (минут)" />
            <EditText
                android:id="@+id/settings_update_edit"
                android:layout_below="@id/settings_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_data_url_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Url для загрузки данных" />
            <EditText
                android:id="@+id/settings_data_url_edit"
                android:layout_below="@id/settings_data_url_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_data_url"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
